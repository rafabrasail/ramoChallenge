<mvc:View
    controllerName="sap.ui.demo.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">

    <!-- <pages> -->
    <Page>
        <content>
            <Panel
                headerText="Table to bind data"
                class="sapUiResponsiveMargin"
                width="auto">
                <content>

                    <List items="{todosModel>/}"
                        id="todosListId">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="Tasks" class="textCssLearn" />
                                <ToolbarSpacer />
                                <SearchField width="50%" liveChange=".mySerach" />
                            </Toolbar>
                        </headerToolbar>
                        <items>
                            <CustomListItem>
                                <content>
                                    <VBox>
                                        <items>
                                            <ObjectListItem
                                                title="{todosModel>title}"
                                                number="{todosModel>id}"
                                                numberUnit="completed"
                                                icon="{= ${todosModel>completed} ? 'sap-icon://accept' : 'sap-icon://decline'}"
                                                type="Navigation"
                                                press="onPress"
                                            />
                                        </items>
                                    </VBox>
                                </content>
                            </CustomListItem>
                        </items>
                    </List>

                </content>
            </Panel>
        </content>
    </Page>

</mvc:View>